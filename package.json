{
  "name": "riew",
  "version": "0.61.1",
  "description": "Reactive view-controller architecture",
  "main": "./lib",
  "scripts": {
    "clean": "rm -rf ./lib/* && rm -f ./riew.dev.js && rm -f ./riew.production.js",
    "build-dev": "cp ./riew.js ./riew.dev.js && node ./scripts/replaceInFile.js ./riew.dev.js __DEV__ true",
    "build-production": "cp ./riew.js ./riew.production.js && node ./scripts/replaceInFile.js ./riew.production.js __DEV__ false && uglifyjs ./riew.production.js -o ./riew.production.js --compress unused,dead_code --mangle",
    "build": "browserify ./lib/index.js -o ./riew.js --standalone Riew --external react && yarn build-dev && yarn build-production && rm ./riew.js",
    "test": "BABEL_ENV=development ./node_modules/.bin/jest \"(.*)\\.spec\\.js\"",
    "test-watch": "BABEL_ENV=development ./node_modules/.bin/jest \"(.*)\\.spec\\.js\" --watch --verbose false",
    "transpile": "rm -rf ./lib/* && ./node_modules/.bin/babel ./src --out-dir ./lib --ignore __tests__,__mocks__",
    "dev": "./node_modules/.bin/babel ./src --out-dir ./lib --ignore spec.js --watch",
    "release": "yarn clean && yarn test && yarn transpile && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krasimir/riew.git"
  },
  "keywords": [
    "riew",
    "reactive",
    "view",
    "controller",
    "react",
    "side effects"
  ],
  "author": "Krasimir Tsonev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krasimir/riew/issues"
  },
  "homepage": "https://github.com/krasimir/riew#readme",
  "devDependencies": {
    "@testing-library/react": "8.0.6",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.0.3",
    "babel-jest": "23.4.2",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "babelify": "8.0.0",
    "browserify": "14.5.0",
    "browserify-shim": "3.8.14",
    "eslint": "4.18.2",
    "eslint-plugin-react": "7.5.1",
    "fsevents": "1.2.4",
    "jest": "23.5.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "redux": "4.0.0",
    "regenerator-runtime": "0.12.1",
    "uglify-js": "^3.0.28"
  },
  "dependencies": {
    "fast-deep-equal": "2.0.1"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "react": "global:React"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./jest/index.js",
    "verbose": false,
    "globals": {
      "__DEV__": true
    }
  }
}
